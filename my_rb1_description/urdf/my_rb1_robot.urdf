<?xml version="1.0"?>
<robot name="rb1_robot">
    <link name="base_link">
        <inertial>
            <mass value="15.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.3584375" ixy="0" ixz="0" iyy="0.3584375" iyz="0" izz="0.484375" />
        </inertial>

        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
            <material name="Blue">
                <color rgba="0.2 0.2 0.8 1"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_base_footprint_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.0 0.0 0.15" />
        <child link="base_link" />
        <parent link="base_footprint" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="base_footprint">
        <inertial>
            <mass value="0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
        </inertial>
    </link>

    <joint name="base_link_left_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" /> 
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="left_wheel">
        <inertial>
            <mass value="2.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00064583" ixy="0" ixz="0" iyy="0.00078125" iyz="0" izz="0.00064583" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder length="0.035" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="0.8 0.2 0.2 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder length="0.035" radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_right_wheel_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 -0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" /> 
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="right_wheel">
        <inertial>
            <mass value="2.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00064583" ixy="0" ixz="0" iyy="0.00078125" iyz="0" izz="0.00064583" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder length="0.035" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="0.8 0.2 0.2 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder length="0.035" radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_front_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0.0 -0.15" />
        <child link="front_caster" />
        <parent link="base_link" /> 
        <joint_properties damping="0.0" friction="0.0" />
    </joint>

    <link name="front_caster">
        <inertial>
            <mass value="1.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.000375" ixy="0" ixz="0" iyy="0.000375" iyz="0" izz="0.000375" />
        </inertial>

        <visual>
            <geometry>	
                <sphere radius="0.025"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.4 0.4 0.4 1" />
            </material>
        </visual>

        <collision>
            <geometry>	
                <sphere radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_back_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0.0 -0.15" />
        <child link="back_caster" />
        <parent link="base_link" /> 
        <joint_properties damping="0.0" friction="0.0" />
    </joint>

    <link name="back_caster">
        <inertial>
            <mass value="1.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.000375" ixy="0" ixz="0" iyy="0.000375" iyz="0" izz="0.000375" />
        </inertial>

        <visual>
            <geometry>	
                <sphere radius="0.025"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.4 0.4 0.4 1" />
            </material>
        </visual>

        <collision>
            <geometry>	
                <sphere radius="0.025"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_front_laser_joint" type="fixed">
        <origin rpy="3.14159 0 0" xyz="0.25 0.0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" /> 
        <joint_properties damping="0.0" friction="0.0" />
    </joint>

    <link name="front_laser">
        <inertial>
            <mass value="1.5"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0003875" ixy="0" ixz="0" iyy="0.0003875" iyz="0" izz="0.000675" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.03"/>
            </geometry>
            <material name="Black">
                <color rgba="0.1 0.1 0.1 1"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.03"/>
            </geometry>
        </collision>
    </link>
</robot>